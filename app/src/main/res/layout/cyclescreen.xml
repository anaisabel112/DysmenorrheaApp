<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoa"
    android:padding="16dp"
    tools:context=".CyclescreenActivity">

    <LinearLayout
        android:id="@+id/main1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="150dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/cycleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cycle"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/btnAddDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#B95B5A"
                    android:text="@string/Addday"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp" />

                <!-- Botón de Return con mismo diseño -->
                <Button
                    android:id="@+id/btnreturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#B95B5A"
                    android:text="@string/Return"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contenedor para los botones dinámicos -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingTop="20dp" />
    </LinearLayout>
</ScrollView>
